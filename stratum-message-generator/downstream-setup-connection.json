{
    "version": "2",
    "doc": [
        "Send SetupConnection and assert SetupConnectionSuccess"
    ],
    "common_messages": [
        {
            "message": {
                "type": "SetupConnection",
                "protocol": 0,
                "min_version": 2,
                "max_version": 2,
                "flags": 0,
                "endpoint_host": "",
                "endpoint_port": 0,
                "vendor": "",
                "hardware_version": "",
